{
    "env": {
        "jasmine" : true,
        "node": true
    },
    "rules": {
        "brace-style": [
            "error",
            "1tbs",
            {"allowSingleLine": true}
        ],
        "max-len": [
            "error", {
                "code": 110,
                "comments": 110,
                "ignorePattern": "^\\s*it\\(\\\"",
                "ignoreUrls": true
            }
        ],
        "max-nested-callbacks": [
            "error",
            5
        ],
        "max-statements": 0,
        "max-statements-per-line": [
            "error", {
                "max": 2
            }
        ],
        "no-array-constructor": 0,
        "no-empty-function": [
            "error",
            {"allow": ["functions"]}
        ],
        "object-curly-newline": [
            "error", {
                "ObjectExpression": {
                    "multiline": true,
                    "minProperties": 7
                },
                "ObjectPattern": {
                    "multiline": true,
                    "minProperties": 7
                }
            }
        ],
        "quote-props": [
            "error",
            "as-needed"
        ],
        "require-jsdoc": 0,
        "strict": [
            "error",
            "safe"
        ]
    }
}
